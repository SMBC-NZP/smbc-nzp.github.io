# Run this section only if you do not currently have the current version of
# tidyverse installed!

install.packages('tidyverse')

# Load the libraries we will use:

library(tidyverse)
library(stringr)

# Create a vector of numeric values:

v <-
  c(1, 1, 2, 3, 5, 8)

# Turn the vector into a two column matrix:

m <-
  matrix(
    v,
    ncol = 2)

# Turn the matrix into a data frame:

df <-
  as.data.frame(
    m,
    col.names = c('hello', 'world'))

# Some dummy data:

dummyData <-  
  data.frame(
    gen = c('a', 'b', 'a', 'a', 'b'),
    n = c(3,5,8,13, 21))



